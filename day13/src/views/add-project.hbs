    <!-- Form Start -->
    <h1 class="text-center fs-3">ADD MY PROJECT</h1>
    <form class="container form" method="post" action="/add-project">
        <div class="mb-3">
          <label for="inputProject" class="form-label mb-2">Project Name</label>
          <input type="text" class="form-control" id="inputProject" name="name" required>
        </div>
        <div class="mb-3 d-flex gap-3">
            <div class="container-startdate">
                <label for="startDate" class="form-label">Start Date</label>
                <input type="date" class="form-control" id="startDate" name="startDate" required>
            </div>
            <div class="container-enddate">
                <label for="endDate" class="form-label">End Date</label>
                <input type="date" class="form-control" id="endDate" name="endDate" required>
            </div>
        </div>
        <div class="mb-3">
            <label for="desc" class="mb-2">Description</label>
            <textarea class="form-control textarea" id="desc" name="desc" required></textarea>
        </div>
        <label for="checkbox">Technologies</label>
        <div class="mb-3 mt-3">
            <div class="d-flex gap-3">
            <div class="d-flex gap-1">
                <input type="checkbox" class="form-check-input" id="nodeJs" name="nodeJs" data-icon="nodeJs">
                <label for="nodeJs" class="form-label" >Node Js</label>
            </div>
            <div class="d-flex gap-1">
                <input type="checkbox" class="form-check-input" id="nextJs" name="nextJs" data-icon="nextJs">
                <label for="nextJs" class="form-label">Next Js</label>
            </div>
            </div>
            <div class="d-flex gap-3">
            <div class="d-flex gap-1">
                <input type="checkbox" class="form-check-input" id="reactJs" name="reactJs" data-icon="reactJs">
                <label for="reactJs" class="form-label">React Js</label>
            </div>
            <div class="d-flex gap-1">
                <input type="checkbox" class="form-check-input" id="typeScript" name="typeScript" data-icon="typeScript">
                <label for="typescript" class="form-label">TypeScript</label>
            </div>
            </div>
        </div>
        <div class="mb-3">
            <label for="inputImage" class="form-label">Upload Image</label>
            <input type="file" class="form-control" id="inputImage">
        </div>
        <div class="d-flex justify-content-end mt-3">
            <button type="submit" class="btn text-white">Submit</button>
        </div>
      </form>
    <!-- Form End -->

    <!-- Script -->
