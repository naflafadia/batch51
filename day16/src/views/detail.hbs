<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Personal Website</title>
    <link rel="stylesheet" href="/assets/css/detail.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Didact+Gothic&family=Inclusive+Sans&family=Inter:wght@200;400;600;900&family=Kanit:wght@300&family=Poppins:ital,wght@0,100;0,300;0,400;0,700;1,700&display=swap" rel="stylesheet">
  </head>
  <body>
    <!-- Navbar Start -->
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
          <a class="navbar-brand ms-5" href="/"><img src="/assets/img/brandred.png"></a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active ms-5 fs-5" aria-current="page" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active ms-5 fs-5" href="/add-project">Add Project</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active ms-5 fs-5" href="/testimonials">Testimonials</a>
              </li>
            </ul>
            {{#if isLogin}}
            <p class="text-primary navbar-nav nav-link regislog fs-5">Welcome, {{user.name}} !</p>
            {{else}}
            <ul class="navbar-nav">
                <div class="regislog">
              <li class="nav-item">
                <a class="nav-link active ms-5 fs-5" href="/register">Register</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active ms-5 fs-5" href="/login">Login</a>
              </li>
              </div>
            </ul>
            {{/if}}
              <a href="/contact"><button class="btn btn-outline-success me-5 text-white btn fs-5" type="submit">Contact Me</button></a>
          </div>
        </div>
      </nav>
    <!-- Navbar End -->

    {{#if isLogin}}
    <form action="/logout" method="post" class="d-flex justify-content-end mx-5">
    <button type="submit" class="btn-outline-primary p-2 mt-4 text-center">Logout</button>
    </form>
    {{/if}}

    <!-- Content Start -->
    <h1 class="text-center fs-3 mb-4 fw-bold mt-5">{{data.name}}</h1>
    <div class="container mt-5">
        <div class="row text-center justify-content-center">
          <div class="col">
            <img src="/uploads/{{data.image}}" class="img-content">
          </div>
          <div class="col">
            <h2 class="fs-4 mb-3 mt-2">Duration</h2>
                <div class="d-flex gap-3 justify-content-center">
                    <img src="/assets/icons/calendar.png" class="img-icon">
                    <h6>{{data.start_date}} - {{data.end_date}}</h6>
                </div>
                <div class="d-flex gap-3 mt-2 justify-content-center">
                    <img src="/assets/icons/clock.png" class="img-icon">
                    <h6>{{data.duration}} {{data.unit}}</h6>
                </div>
            <h2 class="fs-4 mb-3 mt-5">Technologies</h2>
            <div class="d-flex gap-4 justify-content-center">
              {{#if data.icons.nodeJs}}
                  <div class="d-flex gap-2">
                      <img src="{{data.icons.nodeJs}}" class="img-icon">
                      <h6>Node Js</h6>
                  </div>
              {{/if}}
              {{#if data.icons.nextJs}}
                  <div class="d-flex gap-2">
                      <img src="{{data.icons.nextJs}}" class="img-icon">
                      <h6>Next Js</h6>
                  </div>
              {{/if}}
              {{#if data.icons.reactJs}}
                  <div class="d-flex gap-2">
                      <img src="{{data.icons.reactJs}}" class="img-icon">
                      <h6>React Js</h6>
                  </div>
              {{/if}}
              {{#if data.icons.typeScript}}
                  <div class="d-flex gap-2">
                      <img src="{{data.icons.typeScript}}" class="img-icon">
                      <h6>TypeScript</h6>
                  </div>
              {{/if}}
            </div>
          </div>
        </div>
    </div>
    <div class="container mt-5">
        <div class="row">
          <div class="col">
            <p class="fs-6 paragraph">{{data.description}}</p>
          </div>
        </div>
    </div>
    <!-- Content End -->
    
    <!-- Script -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>